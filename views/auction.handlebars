<section class="container">
  <h3 class="auction-name">{{auction.name}}</h3>
  <h4>Opening Hour: {{format_time auction.starting_date}}</h4>
  <h4>Closing Hour: {{format_time auction.ending_date}}</h4>
  <!-- If the user is logged in, render the auction content -->
  {{#if loggedIn}}
  <section class="flex-row justify-center">
    {{#each auction.products as |product|}}
    {{> painting-details}}
    {{/each}}
  </section>
</section>
<!-- Otherwise, provide a link to login -->
{{else}}
<a href="public/js/login.js">You must login to bid on the products</a>
{{/if}}