<!-- If the user is logged in, render the painting content -->
{{#if loggedIn}}
<section class="product">
  <img src="/images/{{product.filename}}" alt="{{product.description}}">
  <div class="product-details">
    <h3>{{product.title}}</h3>
    <p>Posted By: {{product.seller}}</p>
    <p>Auction open until: {{ format_date product.auction_date}}</p>
  </div>
</section>
<!-- Otherwise, provide a link to login -->
{{else}}
<a href="/login">You must login first to bid on this product</a>
{{/if}}